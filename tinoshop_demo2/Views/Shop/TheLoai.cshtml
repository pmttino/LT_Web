@model IEnumerable<tinoshop_demo2.Models.Product>

@*@model PageList<tinoshop_demo2.Models.Product>*@

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_6.jpg');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span class="mr-2"><a href="/Home">Home</a></span> <span>Shop</span></p>
				<h1 class="mb-0 bread">Shop</h1>
				<form asp-controller="Shop" asp-action="TimKiem">
					<input type="text" name="timKiem" />
					<input type="submit" name="timKiem" value="Tìm kiếm" class="btn btn-info" />
				</form>
			</div>
		</div>
	</div>
</div>

<section class="ftco-section bg-light">
	<div class="container">
		<div class="row">
			<!--nhet san pham vao day-->
			<div class="col-md-8 col-lg-10 order-md-last">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
							<div class="product d-flex flex-column">
								<a href="/Products/Details" class="img-prod">
									<img class="img-fluid" src="@item.ProductImage" alt="Colorlib Template">
									<div class="overlay"></div>
								</a>
								<div class="text py-3 pb-4 px-3">
									<div class="d-flex">
										<div class="cat">
											@*<span>@item.Category.CategoryName</span>*@
											<p>TiNo Shop</p>
										</div>
										<div class="rating">
											<p class="text-right mb-0">
												<a href="#"><span class="ion-ios-star-outline"></span></a>
												<a href="#"><span class="ion-ios-star-outline"></span></a>
												<a href="#"><span class="ion-ios-star-outline"></span></a>
												<a href="#"><span class="ion-ios-star-outline"></span></a>
												<a href="#"><span class="ion-ios-star-outline"></span></a>
											</p>
										</div>
									</div>
									<h3><a href="#">@item.ProductName</a></h3>
									<div class="pricing">
										<p class="price"><span>@item.ProductPrice</span>đ</p>
									</div>
									<p class="bottom-area d-flex px-3">
										<a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
										<a href="#" class="buy-now text-center py-2">Buy now<span><i class="ion-ios-cart ml-1"></i></span></a>
									</p>
								</div>
							</div>
						</div>
					}
				</div>
